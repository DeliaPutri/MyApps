<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <ImageView
            android:id="@+id/ivRS"
            android:onClick="clickRS"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hospital" />

    <ImageView
            android:id="@+id/ivPOL"
            android:onClick="clickPOL"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/polisi" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivSEKOLAH"
            android:onClick="clickSEKOLAH"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sekolah" />

        <ImageView
            android:id="@+id/ivSUPERMARKET"
            android:onClick="clickSM"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sp" />
    </TableRow>
</LinearLayout>